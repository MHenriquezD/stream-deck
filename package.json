{
  "name": "stream-deck-local",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -n \"SERVER,WEB\" -c \"blue,green\" \"pnpm --filter server start:dev\" \"pnpm --filter web dev\"",
    "dev:server": "pnpm --filter server start:dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm --parallel build:server build:web",
    "build:server": "pnpm --filter server build",
    "build:web": "pnpm --filter web build",
    "build:executables": "pnpm run build:server && pnpm run nexe:win && pnpm run nexe:mac && pnpm run nexe:linux",
    "nexe:win": "nexe apps/server/dist/main.js -t windows-x64-18.17.0 -o dist/StreamDeck-Server-Windows.exe",
    "nexe:mac": "nexe apps/server/dist/main.js -t macos-x64-18.17.0 -o dist/StreamDeck-Server-macOS",
    "nexe:linux": "nexe apps/server/dist/main.js -t linux-x64-18.17.0 -o dist/StreamDeck-Server-Linux",
    "caxa:win": "node scripts/build-caxa-win.js",
    "caxa:linux": "caxa --input apps/server/dist --output dist/StreamDeck-Server-Linux -- node main.js",
    "caxa:mac": "caxa --input apps/server/dist --output dist/StreamDeck-Server-macOS -- node main.js",
    "caxa:executables": "pnpm run caxa:win && pnpm run caxa:linux && pnpm run caxa:mac",
    "build:portable": "node scripts/build-portable.js",
    "test": "jest -c jest.config.ts",
    "test:server": "pnpm --filter server test",
    "test:server:watch": "pnpm --filter server test:watch",
    "test:server:e2e": "pnpm --filter server test:e2e",
    "lint:server": "pnpm --filter server lint",
    "format:server": "pnpm --filter server format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.0",
  "devDependencies": {
    "caxa": "^3.0.1",
    "concurrently": "^9.2.1",
    "nexe": "5.0.0-beta.4",
    "pkg": "^5.8.1",
    "typescript": "^5.9.3"
  }
}
