{
  "name": "stream-deck-local",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -n \"SERVER,WEB\" -c \"blue,green\" \"pnpm --filter server start:dev\" \"pnpm --filter web dev:electron\"",
    "dev:server": "pnpm --filter server start:dev",
    "dev:web": "pnpm --filter web dev",
    "dev:electron": "pnpm --filter web dev:electron",
    "build": "pnpm --parallel build:server build:web",
    "build:server": "pnpm --filter server build",
    "build:web": "pnpm --filter web build",
    "build:electron": "pnpm run build:server && pnpm --filter web build:electron",
    "build:electron:win": "pnpm run build:electron && pnpm -C apps/web exec electron-builder --win --publish never",
    "build:web:android": "pnpm run build:web && cd apps/web && npx cap build android",
    "build:apk": "pnpm run build:web:android",
    "test": "jest -c jest.config.ts",
    "test:server": "pnpm --filter server test",
    "test:server:watch": "pnpm --filter server test:watch",
    "test:server:e2e": "pnpm --filter server test:e2e",
    "lint:server": "pnpm --filter server lint",
    "format:server": "pnpm --filter server format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.0",
  "dependencies": {
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "localtunnel": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  }
}
